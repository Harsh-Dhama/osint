{
  "name": "osint-platform",
  "version": "1.0.0",
  "description": "OSINT Platform - Unified Digital Investigation Tool for Law Enforcement",
  "main": "electron-app/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && python main.py",
    "dev:frontend": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win --x64",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.osint.platform",
    "productName": "OSINT Platform",
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "files": [
      "electron-app/**/*",
      "backend/**/*",
      "!backend/__pycache__",
      "!backend/**/*.pyc"
    ]
  },
  "keywords": [
    "osint",
    "investigation",
    "law-enforcement",
    "digital-forensics"
  ],
  "author": "OSINT Platform Team",
  "license": "Proprietary",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^28.1.4",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "axios": "^1.6.5",
    "electron-store": "^8.1.0"
  }
}
