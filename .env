# Application Configuration
APP_NAME=OSINT Platform
APP_VERSION=1.0.0
ENVIRONMENT=production

# Security
SECRET_KEY=osint-platform-secret-key-change-this-in-production-2025
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=480

# Database
DATABASE_URL=sqlite:///./data/osint.db
DATABASE_ENCRYPTION_KEY=your-encryption-key-here

# Server
HOST=127.0.0.1
PORT=8000

# Data Retention (days)
DATA_RETENTION_DAYS=90
AUTO_DELETE_ENABLED=false

# Credits System
DEFAULT_USER_CREDITS=100
ADMIN_INITIAL_CREDITS=10000

# Telegram Bot Tokens (for Number/Email Tracker)
TELEGRAM_API_ID=your-api-id
TELEGRAM_API_HASH=your-api-hash
TELEGRAM_BOT_TOKEN=your-bot-token

# External API Keys (optional)
HAVEIBEENPWNED_API_KEY=
NUMVERIFY_API_KEY=
TRUECALLER_API_KEY=

# Report Configuration
AGENCY_NAME=Law Enforcement Agency
AGENCY_LOGO_PATH=./assets/logo.png
CONFIDENTIALITY_WATERMARK=CONFIDENTIAL - FOR OFFICIAL USE ONLY

# Facial Recognition
FACE_RECOGNITION_TOLERANCE=0.6
FACE_DETECTION_MODEL=hog

# Social Media Scraping
SCRAPING_DELAY_MIN=2
SCRAPING_DELAY_MAX=5
MAX_CONCURRENT_SCRAPES=3

# Audit Logs
AUDIT_LOG_ENABLED=true
AUDIT_LOG_RETENTION_DAYS=365

# Backup
AUTO_BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24
BACKUP_LOCATION=./backups
